
{cover_enabled, true}.


{erl_opts, [
	debug_info, warnings_as_errors, {parse_transform, lager_transform}
]}.

{erl_first_files, ["src/nklib_parse_trans_vsn"]}.


% {edoc_opts, [{dir, "../../doc"}]}.

{deps, [
	{lager, "3.9.2"},
    {lager_syslog, {git, "https://github.com/erlang-lager/lager_syslog.git", {tag, "3.0.3"}}},
    {syslog, {git, "https://github.com/2600hz/erlang-syslog", {ref, "bbad537a1cb5e4f37e672d2e2665659e850662d0"}}},
    jsone,
    yamerl,
    eper,
    recon,
    {meck, {git, "https://github.com/eproxus/meck.git", {tag, "0.9.2"}}},
    enotify,
    mimerl,
    rfc3339,
    parsexml,
    {qdate_localtime, "1.2.1"},
    erlware_commons,
    qdate

    %% Candidates
    %% edown
    %% https://github.com/project-fifo/qdate
]}.

{overrides,
    [
        {override, eper, [{erl_opts, [debug_info]}]},
        {override, jsone, [{erl_opts, [{d, 'ENABLE_HIPE'}, inline]}]}
    ]}.


{plugins, [pc]}.
% {plugins, [{rebar3_auto, {git, "https://github.com/vans163/rebar3_auto.git", {branch, "master"}}}]}.

{pre_hooks, [{compile, "make version_header"}]}.


%% xref checks to run
{xref_checks, [
    undefined_function_calls, undefined_functions,
    locals_not_used, deprecated_function_calls, deprecated_functions
]}.

